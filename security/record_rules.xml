<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- The "Administrative documents" feature gives any user access to other 
            employees' admin docs. Disable it by adding a record rule that applies to every attachment, 
            except for those employee-related. -->

        <record model="ir.rule" id="employee_attachment_rule">
            <field name="name">Employee attachments</field>
            <field name="model_id" ref="base.model_ir_attachment" />
            <field name="domain_force">[('res_model','!=','hr.employee')]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]" />
        </record>

    </data>
</openerp>
