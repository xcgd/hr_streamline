<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
 	<record id="view_employee_form2" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="validation_group_1"/>
                    <field name="validation_group_2"/>
                    <field name="is_validator" />
                </xpath>
                <xpath expr="//page[@string='HR Settings']" position="after">
                <page string="For validation" groups="base.group_hr_user">
                                <group>                                   
                                     <field name="validation_groups">
                                      <tree string="Validation groups member of" editable="top">
                    						<field name="name"/>
                    					</tree>
                    					</field>
                                </group>
                    	</page>
                    </xpath>
               </field>
        </record>
        
        <record model="ir.ui.view" id="validation_groups_form_view">
            <field name="name">hr.vgroups.form</field>
            <field name="model">hr.vgroups</field>
            <field name="arch" type="xml">
            	<form string="Validation group">
            		<sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1> 
                         </div>  
                       	<notebook>
                            <page string="Group composition">
                                <group>
                                	<group string="Members of the group">
                                        <field name="members">
                                        <tree string="Validation group members" editable="top">
                    						<field name="name"/>
                    					</tree>
                    					</field>
                                    </group>
                                    </group>
                                </page>
                              <page string="Responsibilities">
                                <group>
                                	<group string="For validation employees">
                                        <field name="for_validation_1">
                                        <tree string="For validation employees" editable="top">
                    						<field name="name"/>
                    					</tree>
                    					</field>
                    					<field name="for_validation_2">
                                        <tree string="For validation employees" editable="top">
                    						<field name="name"/>
                    					</tree>
                    					</field>
                                    </group>
                                    </group>
                                </page>
                         </notebook>
                     </sheet>
            	</form>
          </field>
        </record>
        
        <record id="view_validation_groups_list" model="ir.ui.view">
           <field name="name">View validation groups list</field>
           <field name="model">hr.vgroups</field>
              <field name="arch" type="xml">
               <tree string="Validation groups">
                   <field name="name"/>                 
               </tree>
           </field>
        </record>
        
        <record id="validation_groups_list_action" model="ir.actions.act_window">
            <field name="name">Validation groups</field>
            <field name="res_model">hr.vgroups</field>
            <field name="view_id" ref="view_validation_groups_list"/>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new validation group.
              </p><p>
                Define here the different validation groups that exists for your company.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_hr_validation_groups" name="Validation groups" parent="hr.menu_hr_root" groups="base.group_hr_manager" sequence="50"/>
 		 <menuitem action="validation_groups_list_action" id="menu_hr_validation_groups_list_act" parent="menu_hr_validation_groups" groups="base.group_hr_manager"/>
 
    
    </data>
</openerp>